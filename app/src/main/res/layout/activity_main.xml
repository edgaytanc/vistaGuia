<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:animateLayoutChanges="true">

        <!-- Contenedor con efecto de elevación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/Imagen"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:background="@drawable/placeholder_gradient"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <!-- Botón con diseño moderno -->
        <Button
            android:id="@+id/BtnEtiquetarImagen"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BtnEtiquetarImagen"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit_bold"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            android:backgroundTint="@color/purple_500"
            app:rippleColor="@color/purple_200"
            app:icon="@drawable/ic_photo_camera"
            app:iconGravity="textStart"
            app:iconPadding="8dp"/>

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/progress_bar_style"/>

        <!-- Contenedor de resultados con sombra -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TxtResultado"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:fontFamily="@font/kanit_light"/>

                <TextView
                    android:id="@+id/Resultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/Resultados"
                    android:textSize="18sp"
                    android:textColor="@color/gray_900"
                    android:fontFamily="@font/kanit_medium"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>